<UserControl
    x:Class="string_matching_algorithm.Views.AlgorithmView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:string_matching_algorithm.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#fffd"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Algorithm"
                   FontSize="100"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"></TextBlock>
        <materialDesign:PackIcon Width="300"
                                 Height="300"
                                 Opacity="0.10"
                                 Kind="Snowflake"
                                 Margin="101,-90,0,0"
                                 Grid.RowSpan="1" />
        <materialDesign:PackIcon Width="200"
                                 Height="200"
                                 Opacity="0.10"
                                 Kind="Snowflake"
                                 Margin="0 500 0 0"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Grid.RowSpan="2" />
        <materialDesign:PackIcon Width="250"
                                 Height="250"
                                 Opacity="0.10"
                                 Kind="SnowflakeVariant"
                                 Margin="500 0 100 200"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Grid.RowSpan="2"
                                 RenderTransformOrigin="0.5,0.5">
            <materialDesign:PackIcon.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-21.078" />
                    <TranslateTransform />
                </TransformGroup>
            </materialDesign:PackIcon.RenderTransform>
        </materialDesign:PackIcon>
        <Image Source="/Assets/wireless.png"
               Width="260"
               Height="349"
               Opacity="0.2"
               RenderTransformOrigin="0.5,0.5"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Margin="82,0,0,45"
               Grid.Row="1">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="205.168" />
                    <TranslateTransform />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Image Source="/Assets/brain.png"
               Stretch="Fill"
               Width="450"
               Height="446"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Opacity="0.2"
               RenderTransformOrigin="0.5,0.5"
               Margin="-178,171,0,0"
               Grid.RowSpan="2">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="68.141" />
                    <TranslateTransform />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Assets/brain.png"
               Stretch="Fill"
               Width="488"
               Height="488"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               Opacity="0.2"
               RenderTransformOrigin="0.5,0.5"
               Margin="0,148,-113,0"
               Grid.Row="1">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-18.16" />
                    <TranslateTransform />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <materialDesign:PackIcon Kind="CogPlayOutline"
                                 Width="276"
                                 Height="224"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Right"
                                 Opacity="0.1"
                                 RenderTransformOrigin="0.5,0.5"
                                 Grid.Row="0"
                                 Margin="200 -50 -100 50"
                                 Grid.RowSpan="2">
            <materialDesign:PackIcon.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-63.286" />
                    <TranslateTransform />
                </TransformGroup>
            </materialDesign:PackIcon.RenderTransform>
        </materialDesign:PackIcon>
        <StackPanel Grid.Row="1">
            <Button Width="300"
                    Height="auto"
                    Margin="0,20"
                    Command="{Binding NavigateNaiveCommand}"
                    Content="Brute Force"
                    FontSize="40" />
            <Button Width="300"
                    Height="auto"
                    Command="{Binding NavigateKMPCommand}"
                    Content="KMP"
                    FontSize="40" />
            <Button Width="300"
                    Height="auto"
                    Margin="0,20,0,0"
                    Command="{Binding NavigateRabinKarpCommand}"
                    Content="Rabin-Karp"
                    FontSize="40" />
            <Button Width="300"
                    Height="auto"
                    Margin="0,20,0,0"
                    Command="{Binding NavigateBoyerMooreCommand}"
                    Content="Boyer-Moore"
                    FontSize="40" />
            <Button Width="300"
                    Height="auto"
                    Margin="0,20"
                    Background="PaleVioletRed"
                    Command="{Binding NavigateHomeCommand}"
                    Content="Back"
                    FontSize="40" />
        </StackPanel>

    </Grid>
</UserControl>
