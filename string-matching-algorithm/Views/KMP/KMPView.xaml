<UserControl x:Class="string_matching_algorithm.Views.KMPView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:i1="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:string_matching_algorithm.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#ffff"
             mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Padding="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="75"
                       FontWeight="Bold"
                       Text="KMP" />
            <!--  text  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Padding="20,0"
                           FontSize="30">
                    Text:
                </TextBlock>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Background="Snow"
                         FontSize="30"
                         Text="{Binding TextString}" />
            </Grid>
            <!--  pattern  -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Padding="20,0"
                           FontSize="30">
                    Pattern:
                </TextBlock>
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Background="Snow"
                         FontSize="30"
                         Text="{Binding PatternString}" />
            </Grid>
            <!--  time  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Padding="20,0"
                           FontSize="30">
                    Time(ms):
                </TextBlock>
                <!--  speed animation  -->
                <TextBox Grid.Column="1"
                         FontSize="30"
                         Text="{Binding AnimationSpeed}" />
            </Grid>
            <!--  render text  -->
            <Grid Grid.Row="4"
                  Margin="40,0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding TxtList, Mode=TwoWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="40"
                                        Height="auto"
                                        Background="White"
                                        BorderBrush="#000"
                                        BorderThickness="1">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="30"
                                               FontWeight="Bold"
                                               Foreground="{Binding Foreground}"
                                               Text="{Binding Text}" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <!--  render pattern  -->
            <Grid Grid.Row="5"
                  Margin="40,10">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding PatList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="40"
                                        Height="auto"
                                        Background="White"
                                        BorderBrush="#000"
                                        BorderThickness="1">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="30"
                                               FontWeight="Bold"
                                               Foreground="{Binding Foreground}"
                                               Text="{Binding Text}" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Row="6"
                  Margin="40,0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding LPSList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="40"
                                        Height="40"
                                        Background="White"
                                        BorderBrush="#000"
                                        BorderThickness="1">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="30"
                                               FontWeight="Bold"
                                               Foreground="{Binding Foreground}"
                                               Text="{Binding Text}" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <!--  render result  -->
            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ScrollViewer Grid.Column="0"
                              Height="300"
                              Margin="20"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <TextBlock Padding="20,0"
                               FontSize="30"
                               FontWeight="Bold"
                               Text="{Binding ResultText}" />
                </ScrollViewer>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!--  search  -->
                        <Button Grid.Column="0"
                                Width="300"
                                Height="70"
                                Margin="30,50,0,0"
                                Command="{Binding SearchCommand}"
                                Content="Search"
                                FontSize="30" />
                        <!--  result  -->
                        <Button Grid.Column="1"
                                Width="300"
                                Height="70"
                                Margin="0,50,40,0"
                                Command="{Binding ResultCommand}"
                                Content="Result"
                                FontSize="30" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!--  random text and pattern  -->
                        <Button Grid.Column="0"
                                Width="300"
                                Height="70"
                                Margin="30,0,0,70"
                                Command="{Binding RandomTextCommand}"
                                Content="Random Text"
                                FontSize="30" />
                        <Button Grid.Column="1"
                                Width="300"
                                Height="70"
                                Margin="0,0,40,70"
                                Command="{Binding RandomPatternCommand}"
                                Content="Random Pattern"
                                FontSize="30" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <!--  back  -->
        <Button Width="200"
                Height="auto"
                Background="PaleVioletRed"
                Command="{Binding NavigateAlgorithmCommand}"
                Content="Back"
                FontSize="30" />
    </StackPanel>
</UserControl>
