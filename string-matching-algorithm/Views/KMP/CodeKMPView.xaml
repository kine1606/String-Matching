<UserControl
    x:Class="string_matching_algorithm.Views.CodeKMPView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:string_matching_algorithm.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#fffd"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="600" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="75"
            FontWeight="Bold"
            Text="{Binding Language}" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="900" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AcceptsReturn="True"
                AcceptsTab="True"
                Background="#fffd"
                BorderThickness="0"
                FontFamily="Consolas"
                FontSize="20"
                FontWeight="Bold"
                IsReadOnly="True"
                Style="{x:Null}"
                Text="{Binding CodeKMP}"
                TextWrapping="Wrap" />
            <Image Grid.Column="1" Source="{Binding Img}" />


        </Grid>

        <WrapPanel Grid.Row="1">
            <Button
                Height="auto"
                Margin="20,20,10,20"
                Command="{Binding CodeJavaCommand}"
                FontSize="25"
                FontWeight="Bold">
                Java
            </Button>
            <Button
                Height="auto"
                Margin="0,20,10,20"
                Command="{Binding CodeCPPCommand}"
                FontSize="25"
                FontWeight="Bold">
                C++
            </Button>
            <Button
                Height="auto"
                Margin="0,20,10,20"
                Command="{Binding CodeCSCommand}"
                FontSize="25"
                FontWeight="Bold">
                C#
            </Button>
            <Button
                Height="auto"
                Margin="0,20,0,20"
                Command="{Binding CodePythonCommand}"
                FontSize="25"
                FontWeight="Bold">
                Python
            </Button>
        </WrapPanel>
        <Grid Grid.Row="3">
            <Button
                Width="200"
                Height="auto"
                Background="PaleVioletRed"
                Command="{Binding NavigateBoyerMooreCommand}"
                Content="Back"
                FontSize="30"
                FontWeight="Bold" />
        </Grid>
    </Grid>
</UserControl>
