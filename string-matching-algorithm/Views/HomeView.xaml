<UserControl x:Class="string_matching_algorithm.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:string_matching_algorithm.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Background="#fffc"
             d:Height="800"
             d:Width="1000"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!--#region -->
        <materialDesign:PackIcon Width="300"
                                 Height="300"
                                 Opacity="0.10"
                                 Kind="Snowflake"
                                 Margin="101,-90,0,0"
                                 Grid.RowSpan="1" />
        <materialDesign:PackIcon Width="200"
                                 Height="200"
                                 Opacity="0.10"
                                 Kind="Snowflake"
                                 Margin="0 500 0 0"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Grid.RowSpan="2" />
        <materialDesign:PackIcon Width="250"
                                 Height="250"
                                 Opacity="0.10"
                                 Kind="SnowflakeVariant"
                                 Margin="500 0 100 200"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Grid.RowSpan="2"
                                 RenderTransformOrigin="0.5,0.5">
            <materialDesign:PackIcon.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-21.078" />
                    <TranslateTransform />
                </TransformGroup>
            </materialDesign:PackIcon.RenderTransform>
        </materialDesign:PackIcon>
        <Image Source="/Assets/wireless.png"
               Width="260"
               Height="349"
               Opacity="0.2"
               RenderTransformOrigin="0.5,0.5"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Margin="82,0,0,45"
               Grid.Row="1">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="205.168" />
                    <TranslateTransform />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Image Source="/Assets/brain.png"
               Stretch="Fill"
               Width="450"
               Height="446"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Opacity="0.2"
               RenderTransformOrigin="0.5,0.5"
               Margin="-178,171,0,0"
               Grid.RowSpan="2">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="68.141" />
                    <TranslateTransform />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Source="/Assets/brain.png"
               Stretch="Fill"
               Width="488"
               Height="488"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               Opacity="0.2"
               RenderTransformOrigin="0.5,0.5"
               Margin="0,148,-113,0"
               Grid.Row="1">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-18.16" />
                    <TranslateTransform />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <materialDesign:PackIcon Kind="CogPlayOutline"
                                 Width="276"
                                 Height="224"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Right"
                                 Opacity="0.1"
                                 RenderTransformOrigin="0.5,0.5"
                                 Grid.Row="0"
                                 Margin="200 -50 -100 50"
                                 Grid.RowSpan="2">
            <materialDesign:PackIcon.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-63.286" />
                    <TranslateTransform />
                </TransformGroup>
            </materialDesign:PackIcon.RenderTransform>
        </materialDesign:PackIcon>

        <!--#endregion-->
        <TextBlock Grid.Row="0"
                   Padding="10"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="150"
                   FontWeight="Bold"
                   Text="AlgoMatch" />
        <StackPanel Grid.Row="1">
            <Button Width="500"
                    Height="auto"
                    Margin="30,100,30,30"
                    Command="{Binding NavigateAlgorithmCommand}"
                    Content="Algorithm"
                    FontSize="50"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    ToolTip="Resource name: MaterialDesignRaisedSecondaryButton" />
            <Button Width="500"
                    Height="auto"
                    Margin="30,0,30,30"
                    Command="{Binding NavigateGuideCommand}"
                    Content="Guide"
                    FontSize="50" />
            <Button Width="500"
                    Height="auto"
                    Margin="30,0"
                    Command="{Binding NavigateAboutCommand}"
                    Content="About Me"
                    FontSize="50" />
        </StackPanel>

    </Grid>
</UserControl>
